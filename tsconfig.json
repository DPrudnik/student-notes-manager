{
  "compilerOptions": {
    /* ===== Основне ===== */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* ===== Структура проєкту ===== */
    "rootDir": ".",
    "outDir": "dist",

    /* ===== Сумісність ===== */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* ===== Якість ===== */
    "strict": true,
    "skipLibCheck": true,

    /* ===== Для Node.js ===== */
    "types": ["node", "jest"]
  },

  "include": [
    "src/**/*.ts",
    "src/tests/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
